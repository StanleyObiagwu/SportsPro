
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>

    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark">
            <a class="navbar-brand" href="/"><i class="fas fa-volleyball-ball fa-3x"></i></a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <a class="nav-link @((ViewBag.Mode=="Home") ? "font-weight-bold" : "")"
                       asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="nav-link @((ViewBag.Mode=="Product") ? "font-weight-bold" : "")"
                       asp-controller="Product" asp-action="List">
                        Products
                    </a>
                    <a class="nav-link @((ViewBag.Mode=="Technician") ? "font-weight-bold" : "")"
                       asp-controller="Technician" asp-action="List">
                        Technicians
                    </a>
                    <a class="nav-link @((ViewBag.Mode=="Customer") ? "font-weight-bold" : "")"
                       asp-controller="Customer" asp-action="List">
                        Customers
                    </a>
                    <a class="nav-link @((ViewBag.Mode=="Incident") ? "font-weight-bold" : "")"
                       asp-controller="Incident" asp-action="List">
                        Incidents
                    </a>
                    <a class="nav-link @((ViewBag.Mode=="Registration") ? "font-weight-bold" : "")"
                       asp-controller="Registration" asp-action="GetCustomer">
                        Registrations
                    </a>
                </div>
                <div class="navbar-nav navbar-right">
                    <partial name="_LoginPartial" />
                    <a class="nav-link @((ViewBag.Mode=="About") ? "font-weight-bold" : "")"
                       asp-controller="Home" asp-action="About">About</a>
                </div>
            </nav>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="text-align:center">
        <div class="container">&copy; @DateTime.Now.Year - SportsPro</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>