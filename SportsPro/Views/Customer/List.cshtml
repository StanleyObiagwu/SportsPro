@model List<Customer>
    @{
        ViewBag.Title = " Customer Manager ";
    }

    <h2>@ViewBag.Title</h2>
    @if (TempData.Keys.Contains("message"))
    {
        <h4 class="bg-info text-center text-white p-2">
            @TempData["message"]
        </h4>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FullName</td>
                    <td>@customer.Email</td>
                    <td>@customer.City</td>

                    <td>
                        <a asp-controller="Customer" asp-action="Edit"
                           asp-route-id="@customer.CustomerID"
                           class="btn btn-primary btn-block">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Customer" asp-action="Delete"
                           asp-route-id="@customer.CustomerID"
                           class="btn btn-warning btn-block">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Customer" class="btn btn-dark" asp-action="Add">Add Customer</a>
    </div>





