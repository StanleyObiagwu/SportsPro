@model Customer
@{
    ViewBag.Title = " Customer ";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">PostalCode</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID" class="form-control">
            <option value="">Select a Country</option>
            @foreach (Country g in ViewBag.Countries)
            {
                <option value="@g.CountryID">@g.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>





    <input type="hidden" asp-for="CustomerID" />

    <button type="submit" class="btn btn-primary">Save</button>
    @if (ViewBag.Action == "Add")
    {
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-primary">Cancel</a>
    }
    else
    {
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-primary">Cancel</a>
    }
</form>
