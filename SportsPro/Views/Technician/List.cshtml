@model List<Technician>
@{
    ViewBag.Title = " Technician Manager";
}

<h2>@ViewBag.Title</h2>
@if (TempData.Keys.Contains("message"))
{
    <h4 class="bg-info text-center text-white p-2">
        @TempData["message"]
    </h4>
}


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var technician in Model)
        {
            <tr>
                <td>@technician.Name</td>
                <td>@technician.Email</td>
                <td>@technician.Phone</td>
                <td>
                    <a asp-controller="Technician" asp-action="Edit"
                       class="btn btn-primary btn-block"
                       asp-route-id="@technician.TechnicianID">
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Technician" asp-action="Delete"
                       class="btn btn-warning btn-block"
                       asp-route-id="@technician.TechnicianID">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Technician" class="btn btn-dark" asp-action="Add">Add Technician</a>
</div>





